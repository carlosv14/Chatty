@model IEnumerable<Chatty.Web.Models.ChatRoom.ChatRoomListItemViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Chat Rooms</h2>
        <div class="card-text">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Number of users
                            </th>
                            <th>
                                Options
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model)
                        {
                            <tr>
                                <td>
                                    @room.Name
                                </td>
                                <td>
                                    @room.NumberOfUsers
                                </td>
                                <td>
                                    <a href="@Url.Action("Detail", "ChatRoom", new { name = room.Name })" class="btn btn-xs btn-default waves-effect">
                                        <i class="material-icons">View</i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>